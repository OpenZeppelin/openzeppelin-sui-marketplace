{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "outDir": "dist",
    "types": [
      "node"
    ]
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "**/*.ts"
  ]
}